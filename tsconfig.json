{
  "compilerOptions": {
    "target":"ES2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": false,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@test/*": ["test/*"]
    },
    "rootDirs": [
      "./src",
      "test"
    ],
    "types": ["node", "jest"],
    "typeRoots": [ "./node_modules/@types", "@types/alltypes.d.ts" ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*.ts",
    "test/**/*.ts", 
    "jest.config.js"  
  ],
  "exclude": [
    "./node_modules/*",
    "build"
  ]
}