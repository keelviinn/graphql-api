{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,                         
    "noImplicitAny": false,                   
    "typeRoots": [
      "../node_modules/@types",
      "../@types"
    ],
    "types": ["node"],
    "esModuleInterop": true,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}